---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = 'About Me';

const identity = {
    firstName: 'Alex',
    country: 'United States',
    occupation: 'University Financial Aid',
    hobbies: ['learning', 'reading', 'programming']
}

const skills = ["C++", "HTML", "CSS", "JavaScript", "React", "Astro"];

const happy = true;
const finished = false;
const goal = 3;

// style vars
const skillColor = 'purple'
const fontWeight = 'bold'
const textCase = 'uppercase'
---
<BaseLayout>
  <h1>{pageTitle}</h1>
  <h2>... and my new Astro site!</h2>

  <p>Here are a few fun facts about me:</p>
  <ul>
      <li>My name is {identity.firstName}.</li>
      <li>I live in the {identity.country} and I work in {identity.occupation}.</li>
      {identity.hobbies.length >= 2 &&
          <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
        }
      </ul>
      <p>My programming skills are:</p>
      <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
      </ul>
  </ul>

  {happy && <p>I am happy to be learning Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}

  {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
</BaseLayout>